<div class="headback">
  <div class="container">
    <div class="headtopcontents speaker">
      <img src="/assets/img/speaker/speaker-title.png" alt="">
    </div>
  </div>
</div>
<div class="section-view">
  <div class="section-backview colorview1"></div>
  <div class="section-backview colorview2"></div>
  <div class="section-backview colorview3"></div>
  <div class="container">
    <div class="backwhite-inner">
      <%= partial "modules/ticketbar" %>
      <div class="row">
        <div class="col-md-12 box-section">
          <h1><%= data.speaker.title%></h1>
          <p><%= data.speaker.description%></p>
        </div>
        <div class="col-md-12 box-section">
            <% data.speaker.speakers.each_slice(2) do |speaker| %>
            <div class="col-md-12">
              <% speaker.each do |s| %>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <hr/>
                    <h3><%= s.messagetitle %></h3>
                  <div class="col-md-6">
                      <div class="row">
                        <div class="col-md-3 col-sm-3 col-xs-12" id="<%= s.programid %>">
                        <img src="/assets/img/<%= s.imgthumb %>" alt="userprofileimg" class="userprofileimg">
                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                      <h2><%= s.name %></h2>
                      <% if s.sns.present? %>
                        <% if s.sns.twitter %>
                          <a href="https://twitter.com/<%= s.sns.twitter %>" target=="_blank">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                          </a>
                        <% else %>
                        <% end %>
                        <% if s.sns.facebook %>
                          <a href="https://www.facebook.com/<%= s.sns.facebook %>" target="_blank">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                          </a>
                        <% else %>
                        <% end %>
                        <% if s.sns.github %>
                          <a href="https://github.com/<%= s.sns.github %>" target="_blank">
                            <i class="fa fa-github-alt" aria-hidden="true"></i>
                          </a>
                        <% else %>
                        <% end %>
                      <% end %>
                      <p>
                        <% s.detail.each do |d| %>
                        <small><%= d %></small><br/>
                        <% end %>
                        <ul class="userprofile">
                          <% s.history.each do |h| %>
                          <li><%= h %></li>
                          <% end %>
                        </ul>
                      </p>
                    </div>
                </div>
                  </div>
                  <div class="col-md-6">
                     <h4>講演内容</h4>
                    <small><%= s.messagebody %></small>
                  </div>
                </div>
            </div>
              <% end %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
